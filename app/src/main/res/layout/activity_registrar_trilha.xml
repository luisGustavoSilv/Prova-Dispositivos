<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40C4FF"
    tools:context=".RegistrarTrilha">


    <EditText
        android:id="@+id/et_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="117dp"
        android:ems="10"
        android:inputType="text"
        android:text="Local"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_Registrar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="355dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="130dp"
        android:backgroundTint="#FF9800"
        android:text="Registrar"
        android:textColor="@color/preto"
        app:layout_constraintBottom_toTopOf="@+id/tv_registro"
        app:layout_constraintEnd_toStartOf="@+id/bt_Sair"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_Sair"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="29dp"
        android:backgroundTint="#FF9800"
        android:text="Sair"
        android:textColor="@color/preto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bt_Registrar"
        app:layout_constraintTop_toBottomOf="@+id/et_periodo" />

    <EditText
        android:id="@+id/et_dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:inputType="text"
        android:text="Dia"
        app:layout_constraintStart_toStartOf="@+id/et_local"
        app:layout_constraintTop_toBottomOf="@+id/et_local" />

    <EditText
        android:id="@+id/et_periodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="text"
        android:text="Periodo"
        app:layout_constraintStart_toStartOf="@+id/et_dia"
        app:layout_constraintTop_toBottomOf="@+id/et_dia" />

    <Button
        android:id="@+id/bt_MostrarRegistro"
        android:layout_width="170dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="50dp"
        android:backgroundTint="#FF9800"
        android:text="Mostrar registro"
        android:textColor="@color/preto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_Registrar" />

    <TextView
        android:id="@+id/tv_registro"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginBottom="148dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_Registrar" />
</androidx.constraintlayout.widget.ConstraintLayout>