<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bt_KmHr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_RegistrarTrilha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="35dp"
        android:backgroundTint="#FF9800"
        android:text="Registrar Trilha"
        android:textColor="@color/preto"
        app:layout_constraintBottom_toTopOf="@+id/bt_Compartilhar"
        app:layout_constraintEnd_toStartOf="@+id/bt_Gerenciar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_EscolhaUmaAcao" />

    <Button
        android:id="@+id/bt_Compartilhar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="48dp"
        android:backgroundTint="#FF9800"
        android:text="Compartilhar Trilha"
        android:textColor="@color/preto"
        app:layout_constraintBottom_toTopOf="@+id/bt_Sobre"
        app:layout_constraintEnd_toStartOf="@+id/bt_Configuracao"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_RegistrarTrilha" />

    <Button
        android:id="@+id/bt_Gerenciar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="302dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="35dp"
        android:backgroundTint="#FF9800"
        android:text="Gerenciar Trilha"
        android:textColor="#2C2222"
        app:layout_constraintBottom_toTopOf="@+id/bt_Configuracao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bt_RegistrarTrilha"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_Configuracao"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="282dp"
        android:backgroundTint="#FF9800"
        android:text="Configuracao"
        android:textColor="@color/preto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bt_Compartilhar"
        app:layout_constraintTop_toBottomOf="@+id/bt_Gerenciar" />

    <Button
        android:id="@+id/bt_Sobre"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="186dp"
        android:backgroundTint="#FF9800"
        android:text="Sobre"
        android:textColor="@color/preto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_Compartilhar" />

    <TextView
        android:id="@+id/tv_EscolhaUmaAcao"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="179dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="67dp"
        android:gravity="center"
        android:text="Escolha uma Acao!"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/bt_RegistrarTrilha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>